<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/loginpage_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="#485B6268"
        android:gravity="center"
        android:text=" Enter password for next step "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FBFBFB"
        android:textSize="20sp"/>

    <EditText
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="25sp"
        android:background="@drawable/edittext_background"
        android:layout_margin="20dp"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:hint="Enter your password"
        android:id="@+id/verifyPasswordEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="25sp"
            android:background="@drawable/button_background"
            android:id="@+id/cancelButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="cancel" />

        <Button
            android:textSize="25sp"
            android:background="@drawable/button_background"
            android:id="@+id/okButtonId"
            android:text="Ok"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>