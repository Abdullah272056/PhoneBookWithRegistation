<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#46484E"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="140dp">




        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/personImageViewId"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/person_image_background"
                android:src="@drawable/person" />


        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="5"
            android:orientation="vertical"
            android:layout_weight="2.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/nameTextViewId"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:paddingLeft="10dp"
                android:text="Name"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/locationTextViewId"
                android:drawableLeft="@drawable/location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:paddingLeft="10dp"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/phoneNumberTextViewId"
                android:textColor="#EC0505"
                android:background="@drawable/phone_number_textview_background"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:paddingLeft="10dp"
                android:text="01994215664"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight=".8"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/callImageViewId"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/person_image_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_phone" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/messageImageViewId"
                    android:background="@drawable/person_image_background"
                    android:padding="8dp"
                    android:src="@drawable/message"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>






        </LinearLayout>
    </LinearLayout>


</LinearLayout>